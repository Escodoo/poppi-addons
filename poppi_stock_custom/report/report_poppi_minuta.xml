<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <template
        id="poppi_minuta_report_inherit_stock"
        inherit_id="stock.report_delivery_document"
    >
      <xpath expr="//div[hasclass('page')]" position="after">
         <div style="display:block; clear:both; page-break-after:always;" />

         <div class="page">
            <center>
               <h1>MINUTA DE DESPACHO</h1>
            </center>
            <table class="table table-bordered" name="transportadora">
               <thead />
               <tbody>
                  <tr>
                     <td class="left-align">

                        <div class="row mt-2">
                           <div class="col-4">
                              <strong>Transportadora </strong>
                              <span t-field="o.carrier_id.company_id.name" />
                              <br />

                              <strong>Endereço </strong>
                              <span t-field="o.carrier_id.partner_id.street" />
                              <br />


                              <t t-if="o.carrier_id.partner_id.city_id.name">
                                 <strong>Cidade </strong>
                                 <span t-field="o.partner_id.city_id.name" />
                              </t>
                              <t t-else="">
                                 <strong>Cidade </strong>
                                 <span t-field="o.carrier_id.partner_id.city" />
                              </t>

                              <br />
                              <span t-field="o.incoterm_id.freight_responsibility" />
                           </div>

                           <div class="col-4 text-center">
                              <br />
                              <br />
                              <strong>UF</strong>
                              <span t-field="o.carrier_id.partner_id.state_id.code" />
                           </div>

                           <div class="col-4 text-right">
                              <br />
                              <br />
                              <strong>Telefone</strong>
                              <span
                                            t-field="o.carrier_id.product_id.company_id.phone"
                                        />
                           </div>

                        </div>
                        <div style="clear: both;" />
                     </td>
                  </tr>
               </tbody>
            </table>


            <table class="table table-bordered" name="Remetente" align="center">
               <thead />
               <tbody>
                  <tr>
                     <td class="left-align">
                        <div class="row mt-2">
                           <div class="col-4">
                              <strong>Remetente</strong>

                              <span t-field="o.company_id.partner_id.legal_name" />
                              <br />
                              <strong>Endereço</strong>
                              <span t-field="o.company_id.partner_id.street" />
                              <br />
                              <strong>Cidade</strong>
                              <span t-field="o.company_id.partner_id.city" />
                              <br />
                              <strong>C.N.P.J</strong>
                              <span t-field="o.company_id.partner_id.cnpj_cpf" />

                           </div>
                           <div class="col-4 text-right">
                              <br />
                              <strong>Fone</strong>
                              <span t-field="o.company_id.partner_id.phone" />
                              <br />

                              <strong>UF</strong>
                              <span t-field="o.company_id.partner_id.state_id.code" />
                              <br />

                              <strong> Inscr.</strong>
                              <span t-field="o.company_id.partner_id.inscr_est" />
                           </div>
                        </div>
                        <div style="clear: both;" />
                     </td>
                  </tr>
               </tbody>
            </table>

            <table class="table table-bordered" name="end_entr">
               <thead />
               <tbody>
                  <tr>
                     <td>
                        <div class="row mt-2">
                           <div class="col-4" margin="30px">
                              <strong>Destinatário </strong>
                              <span t-field="o.partner_id.legal_name" />
                              <br />

                              <strong>Endereço </strong>
                              <span t-field="o.company_id.partner_id.street" />
                              <br />

                              <t t-if="o.partner_id.city_id.name">
                                 <strong>Cidade: </strong>
                                 <span t-field="o.partner_id.city_id.name" />
                              </t>
                              <t t-else="">
                                 <strong>Cidade: </strong>
                                 <span t-field="o.partner_id.city" />
                              </t>
                              <br />
                              <strong>CNPJ: </strong>
                              <span t-field="o.partner_id.cnpj_cpf" />
                              <br />

                           </div>
                           <div class="col-4 text-right">
                              <br />
                              <strong>Fone</strong>
                              <span t-field="o.partner_id.phone" />
                              <br />

                              <strong>UF</strong>
                              <span t-field="o.partner_id.state_id.code" />
                              <br />

                              <strong>IE: </strong>
                              <span t-if="o.partner_id.inscr_est" />
                              <span t-field="o.partner_id.inscr_est" />
                              <br />
                           </div>
                        </div>

                        <div style="clear: both;" />
                     </td>
                  </tr>

                  <tr>
                     <td>
                        <t t-foreach="o.partner_id.child_ids" t-as="address">
                           <t t-if="address.type == 'delivery'">
                              <div class="row mt-2">
                                 <div class="col-4">

                                    <strong>Destinatário de Entrega</strong>
                                    <span t-field="address.name" />
                                    <br />

                                    <strong>Endereço
                                       de Entrega</strong>
                                    <span t-field="address.street_name" />
                                    <br />

                                    <t t-if="o.partner_id.city_id.name">
                                       <strong>Cidade de Entrega</strong>
                                       <span t-field="address.name" />
                                    </t>
                                    <t t-else="">
                                       <strong>Cidade de Entrega </strong>
                                       <span t-field="address.city" />
                                    </t>
                                    <br />

                                    <strong>C.N.P.J
                                       de Entrega</strong>
                                    <span t-field="o.partner_id.cnpj_cpf" />
                                    <br />

                                 </div>
                                 <div class="col-4 text-right ">
                                    <br />
                                    <br />
                                    <strong>UF</strong>
                                    <span t-field="address.state_id.code" />

                                 </div>
                              </div>
                           </t>
                        </t>
                        <div style="clear: both;" />
                     </td>
                  </tr>
               </tbody>
            </table>
            <table class="table table-bordered" name="transportadora">
               <thead />
               <tbody>
                  <tr>
                     <!-- <td t-if="o.x_redesp">
                        <strong>Redespacho:</strong>
                        <br />
                        <span t-field="o.x_redesp.partner_id.legal_name" />
                        <br />
                        <span t-field="o.x_redesp.partner_id.street" />
                        <br />
                        <span t-field="o.x_redesp.partner_id.zip" />
                        -
                        <span t-field="o.x_redesp.partner_id.city" />
                        /
                        <span t-field="o.x_redesp.partner_id.state_id.code" />
                        <br />
                        CNPJ:
                        <span t-field="o.x_redesp.partner_id.cnpj_cpf" />
                        - I.E:
                        <span t-field="o.x_redesp.partner_id.inscr_est" />
                        <br />
                        <span t-field="o.x_red_incoterm_id.freight_responsibility" />
                     </td> -->
                  </tr>
               </tbody>
            </table>
            <rigth>
               <h4>DESCRIÇÃO DOS VOLUMES</h4>
            </rigth>
            <table class="table table-bordered" name="volumes">
               <thead />
               <tbody>
                  <tr>
                     <td>
                        <div class="row mt-2">
                           <div class="col-4">
                              <strong>Quantidade:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_qVol" />
                              <br />

                              <strong>Número:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_nVol" />
                              <br />
                           </div>


                           <div class="col-4 text-center">
                              <strong>Espécie:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_esp" />
                              <br />
                              <br />
                              <strong>Peso Liq.:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_pesoL" />
                              <br />
                           </div>

                           <div class="col-4 text-right">
                              <strong>Marca:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_marca" />
                              <br />
                              <br />

                              <strong>Peso Bruto:</strong>
                              <br />
                              <span t-field="o.invoice_ids.nfe40_vol.nfe40_pesoB" />
                              <br />
                           </div>
                           <div style="clear: both;" />
                        </div>
                     </td>
                  </tr>
               </tbody>
            </table>
            <table class="table table-bordered" name="nota">
               <thead />
               <tbody>
                  <tr>
                     <td>
                        <div class="row mt-2">
                           <div class="col-4">
                              <strong>Número NF</strong>
                              <span t-field="o.invoice_ids.document_number" />
                              <br />

                              <strong>Nosso Pedido</strong>
                              <br />
                              <span t-field="o.name" />
                              <br />
                              <br />
                              <strong>Plano</strong>
                              <span />
                              <br />
                           </div>

                           <div class="col-4 text-center">
                              <strong>Emissão</strong>
                              <br />
                              <span t-field="o.invoice_ids.document_date" />
                              <br />
                              <br />

                              <strong>Pedido Cliente</strong>
                              <br />
                              <span />
                              <br />
                           </div>

                           <div class="col-4 text-right">
                              <strong>Valor NF</strong>
                              <br />
                              <span
                                            t-field="o.invoice_ids.invoice_line_ids.price_subtotal"
                                        />
                              <br />
                              <br />

                              <strong>Pares</strong>
                              <br />
                              <span />
                              <br />
                           </div>


                        </div>
                     </td>
                  </tr>
               </tbody>
            </table>
            <table class="table table-bordered" name="obs">
               <thead />
               <tbody>
                  <tr>
                     <td>
                        <div class="row mt-2">
                           <div class="col-4" margin="30px">
                              <strong>Observações</strong>
                              <span t-field="o.note" />
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />

                           </div>

                        </div>
                        <div>
                           <span t-field="o.company_id.partner_id.city_id.name" />,
                           <span t-field="o.date_done" />
                        </div>
                        <left>________________________________________</left>
                        <br />
                        <strong>Assinatura e Carimbo da Transportadora</strong>
                     </td>
                  </tr>
               </tbody>
            </table>
         </div>
      </xpath>
   </template>
</odoo>
